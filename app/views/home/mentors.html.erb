<BR />
<div id="mapcontainer"> 
 <h2>Offered Mentoring Courses</h2>

  <table>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Online?</th>
      <th>In Person?</th>
      <th>Instructor</th>
      <th></th>
      <th></th>
    </tr>

  <% @courses.each do |list| %>
    <tr>
      <td><%= list.category %></td>
      <td><%= link_to 'Course', course_path(list.id) %><%= list.title %></td>
      <td><%= list.online %></td>
      <td><%= list.in_person %></td>
      <td><%= list.user_id %></td>

    </tr>
  <% end %>

  </table>

<div id="center">

<div id="onecolumn"> 
  <div class="icondisplay">
    <%= image_tag("diy.png") %>
    <BR />DIY
  </div>
  <div id="insidetext">
    <% @diy.each do |display| %>
    <% if display.online? %>
    <%= image_tag("online.png") %>
    <% end %> 
    <% if display.in_person? %>
    <%= image_tag("inperson.png") %>
    <% end %> 
    <%= link_to display.title, course_path(display.id) %>
    
    <BR />
    <% end %> 
  </div>

</div>

<div id="onecolumn"> 
  <div class="icondisplay">
    <%= image_tag("music.png") %>
    <BR />Music
  </div>
  <div id="insidetext">
    <% @music.each do |display| %>
    <% if display.online? %>
    <%= image_tag("online.png") %>
    <% end %> 
    <% if display.in_person? %>
    <%= image_tag("inperson.png") %>
    <% end %> 
    <%= link_to display.title, course_path(display.id) %>
    
    <BR />
    <% end %> 
  </div>

</div>
  
</div>
</div>